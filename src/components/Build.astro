---
import AstrHori from "./icons/AstrHori.astro";
import TailwindHori from "./icons/TailwindHori.astro";
import PostDataIcon from '../components/icons/Postdata.astro'

const { t } = Astro.props;
---

<h2 class="text-2xl font-semibold mb-10 flex gap-x-2 items-center justify-center">
    <PostDataIcon class="size-6"/>
    Postdata
</h2>

<h1 class="text-base italic text-center">{t.text}</h1>

<div class="flex flex-col md:flex-row items-center justify-center">
    <a 
    href="https://astro.build/" target="_blank">
    <AstrHori class="w-60 h-auto opacity-50 hover:opacity-100 transition duration-200 ease-in-out hover:-translate-y-1 hover:scale-105"></AstrHori> 
    </a>
    <h1 class="px-10 mb-8 sm:mb-0">+</h1>
    <a 
    href="https://tailwindcss.com/" target="_blank">
        <TailwindHori class="w-80 h-auto px-2 opacity-50 hover:opacity-100 transition duration-200 ease-in-out hover:-translate-y-1 hover:scale-105"></TailwindHori>
    </a>
</div>