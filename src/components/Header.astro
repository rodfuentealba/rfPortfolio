---
let scrolled = false;
let menuOpen = false;
---

<nav 
  class={`fixed top-0 z-20 w-full transition-all duration-300 ${
    scrolled ? "bg-gray-900/80 backdrop-blur-lg" : "bg-transparent"
  }`}
  id="navbar"
>
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <a href="#top" class="flex items-center space-x-3">
      <span class="text-lg"> > rod<span class="font-bold">Fuentealba</span></span>
    </a>
    <button 
      id="menu-button"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm rounded-lg md:hidden focus:outline-none focus:ring-2 focus:ring-gray-200"
      aria-controls="navbar-menu"
      aria-expanded="false"
    >
      <span class="sr-only">Abrir Menú</span>
      <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
      </svg>
    </button>
    <div id="navbar-menu" class="hidden w-full md:block md:w-auto transform transition-all duration-300 ease-in-out scale-95">
      <ul class="flex flex-col p-4 md:p-0 mt-4 md:flex-row md:space-x-8 md:mt-0">
        <li class="hover:scale-105">
            <a href="#top" class="hover:text-semibold hover:text-yellow-500 hover:scale-105">Inicio</a>
        </li>
        <li class="hover:scale-105">
            <a href="#experiencia" class="hover:text-semibold hover:text-yellow-500">Experiencia</a>
        </li>
        <li class="hover:scale-105">
            <a href="#sobre-mi" class="hover:text-semibold hover:text-yellow-500">Sobre Mí</a>
        </li>
        <li class="hover:scale-105">
            <a href="#proyectos" class="hover:text-semibold hover:text-yellow-500">Proyectos</a>
        </li>
        <li class="hover:scale-105">
            <a href="#contacto" class="hover:text-semibold hover:text-yellow-500">Contacto</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const navbar = document.getElementById("navbar");
    const menuButton = document.getElementById("menu-button");
    const navbarMenu = document.getElementById("navbar-menu");

    if (!navbar || !menuButton || !navbarMenu) return;

    // Efecto de scroll para cambiar fondo del navbar
    window.addEventListener("scroll", () => {
      if (window.scrollY > 50) {
        navbar.classList.add("bg-gray-900/80", "backdrop-blur-md");
      } else {
        navbar.classList.remove("bg-gray-900/80", "backdrop-blur-md");
      }
    });

    // Toggle del menú en móviles
    menuButton.addEventListener("click", () => {
      const isOpen = navbarMenu.classList.contains("hidden");
      navbarMenu.classList.toggle("hidden", !isOpen);
      menuButton.setAttribute("aria-expanded", isOpen ? "true" : "false");
    });
  });
</script>
