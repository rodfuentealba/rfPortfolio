---
import "@fontsource-variable/onest";
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import es from "../i18n/es.json";
import en from "../i18n/en.json";

interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;

const lang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es';
const t = lang === 'en' ? en : es;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portafolio de Rodolfo Fuentealba, diseñador UX/UI & Frontend en Chile. Con más de 9 años de experiencia creando productos digitales y sistemas de diseño efectivos." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="canonical" href="https://www.rodfuentealba.com/" />

		<!-- Open Graph -->
		<meta
			property="og:title"
			content="rodFuentealba - Diseñador UX/UI & Frontend"
		/>
		<meta
			property="og:description"
			content="Con +9 años de experiencia desde la ciudad de Valparaíso, Chile."
		/>
		<meta
			property="og:image"
			content="https://www.rodfuentealba.com/ogImage.png"
		/>
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://www.rodfuentealba.com" />
		<meta property="og:image:alt" content="Portafolio de rodFuentealba - Diseñador UX/UI & Frontend con experiencia en diseño digital desde Valparaíso, Chile." />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta
			name="twitter:title"
			content="rodFuentealba - Diseñador UX/UI & Frontend"
		/>
		<meta
			name="twitter:description"
			content="Con +9 años de experiencia desde la ciudad de Valparaíso, Chile."
		/>
		<meta
			name="twitter:image"
			content="https://www.rodfuentealba.com/ogImage.png"
		/>
		<meta
			name="twitter:image:alt"
			content="Captura del portafolio de Rodolfo Fuentealba, diseñador UX/UI & Frontend en Valparaíso."
		/>
	</head>

	<body
		class="relative bg-white dark:bg-neutral-950 text-dark dark:text-white"
	>
		<div
			class="absolute top-0 z-[-2] h-screen w-screen bg-white bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(252,175,238,0.7),rgba(255,255,255,0))] dark:hidden"
		>
		</div>
		<div
			class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))] hidden dark:block"
		>
		</div>
		<Header t={t.navbar} />
		<slot />
		<Footer t={t.footer} n={t.navbar} />
	</body>
</html>

<style is:global>
	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		scroll-behavior: smooth;
	}

	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		overscroll-behavior: none;
	}

	@media (prefers-reduce-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>
